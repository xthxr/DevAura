// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  githubUsername String?  @unique
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  accounts      Account[]
  sessions      Session[]
  developerScore DeveloperScore?
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model DeveloperScore {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // DAI Components
  daiScore       Float    @default(0)
  technicalScore Float    @default(0)
  creativityScore Float   @default(0)
  socialScore    Float    @default(0)
  multiplier     Float    @default(0)
  
  // GitHub Stats
  githubStars       Int      @default(0)
  githubRepos       Int      @default(0)
  githubCommits     Int      @default(0)
  githubFollowers   Int      @default(0)
  githubContributions Int   @default(0)
  
  // LeetCode Stats (mocked)
  leetcodeSolved    Int      @default(0)
  leetcodeRating    Int      @default(0)
  
  // Stack Overflow Stats (mocked)
  stackOverflowReputation Int @default(0)
  stackOverflowAnswers    Int @default(0)
  
  // AI Evaluation (mocked)
  projectOriginality Float   @default(0)
  documentationQuality Float @default(0)
  
  // Metadata
  lastCalculated DateTime @default(now())
  calculationCount Int    @default(0)
  rank          Int?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([daiScore(sort: Desc)])
  @@index([userId])
}

model RefreshLog {
  id        String   @id @default(cuid())
  userId    String
  status    String   // 'success', 'failed', 'in-progress'
  error     String?
  duration  Int?     // in milliseconds
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}
